@model DBContext.Models.ContentManagement

@{ ViewData["SubTitle"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<!-- Main content -->
<section class="">
    <div class="">
        <hr />
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Content Details</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box box-info">
                            <div class="box-header with-border">
                                @*<h3 class="box-title">Details</h3>*@

                                @*<div class="box-tools pull-right">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                                    </div>*@
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <div class="col-sm-12">
                                    <div class="row">
                                        <div class="col-md-3 col-sm-12">
                                            <div class="info-box bg-light">
                                                <div class="info-box-content">
                                                    <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.Name)</span>
                                                    <span class="info-box-number text-center text-muted mb-0">@Html.DisplayFor(model => model.Name)</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <div class="info-box bg-light">
                                                <div class="info-box-content">
                                                    <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.DisplayName)</span>
                                                    <span class="info-box-number text-center text-muted mb-0">@Html.DisplayFor(model => model.DisplayName)</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <div class="info-box bg-light">
                                                <div class="info-box-content">
                                                    <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.IsVisible)</span>
                                                    <span class="info-box-number text-center text-muted mb-0">@Html.DisplayFor(model => model.IsVisible)</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <div class="info-box bg-light">
                                                <div class="info-box-content">
                                                    <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.ItemOrder)</span>
                                                    <span class="info-box-number text-center text-muted mb-0"> @Html.DisplayFor(model => model.ItemOrder)</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-12">
                                            <div class="info-box bg-light">
                                                <div class="info-box-content">
                                                    <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.Title)</span>
                                                    <span class="info-box-number text-center text-muted mb-0"> @Html.DisplayFor(model => model.Title)</span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4 col-sm-12">
                                            <div class="info-box bg-light">
                                                <div class="info-box-content">
                                                    <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.AnchorText)</span>
                                                    <span class="info-box-number text-center text-muted mb-0"> @Html.DisplayFor(model => model.AnchorText)</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-12">
                                            <div class="info-box bg-light">
                                                <div class="info-box-content">
                                                    <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.AnchorUrl)</span>
                                                    <span class="info-box-number text-center text-muted mb-0"> @Html.DisplayFor(model => model.AnchorUrl)</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <div class="info-box bg-light">
                                                <div class="info-box-content">
                                                    <span class="info-box-text text-center text-muted">Image</span>
                                                    <span class="info-box-number text-center text-muted mb-0">
                                                        <img class="img-responsive img-bordered img-lg" src="@Model.ImageUrl" alt="Attachment Image">
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-9 col-sm-12">
                                            <div class="info-box bg-light">
                                                <div class="info-box-content">
                                                    <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.Description)</span>
                                                    <p class="info-box-content text-center text-muted mb-0"> @Html.DisplayFor(model => model.Description)</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer clearfix">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info pull-left">Edit</a>
                                <a asp-action="Index" class="btn btn-sm btn-default pull-right">Back to List</a>
                            </div>
                            <!-- /.box-footer -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>