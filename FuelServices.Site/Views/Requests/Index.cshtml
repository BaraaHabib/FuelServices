@model IEnumerable<DBContext.Models.Request>

@{
    ViewData["Title"] = "Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="sub-banner overview-bgi">
        <div class="container">
            <div class="breadcrumb-area">
                <h1></h1>
                <ul class="breadcrumbs">
                    <li><a href="index.html"></a></li>
                    <li class=""></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <h2>
            All Requests
        </h2>
        <hr />
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Airport)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SendDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArrivalDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartureDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RegistrationNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AircraftType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CallSign)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                    @*<th>
            @Html.DisplayNameFor(model => model.OfferFuelType)
        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.NameOfOperator)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CaptainFmName)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Airport.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SendDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArrivalDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartureDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AircraftType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CallSign)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    @*<td>
            @Html.DisplayFor(modelItem => item.OfferFuelType.Id)
        </td>*@

                    <td>
                        @Html.DisplayFor(modelItem => item.NameOfOperator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CaptainFmName)
                    </td>
                    <td>
                        <a title="Details" asp-action="Details" asp-route-id="@item.Id"><i class="btn btn-default fa-lg fa fa-info-circle"></i></a>
                        @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
