@using Microsoft.AspNetCore.Identity
@inject SignInManager<DBContext.Models.ApplicationUser> SignInManager
@inject UserManager<DBContext.Models.ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

<ul class="nav navbar-nav">
    <li>
        <a>@User.Identity.Name</a>
    </li>
    <li class="user user-menu" style="margin:5% 5px;">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button class="btn btn-sm bg-purple-active" style="padding:5px;" type="submit">Logout</button>
        </form>
    </li>
</ul> }
else
{
<ul class="nav navbar-nav">
    <li>
        <a asp-area="admin" asp-controller="Account" asp-action="Login">Login</a>
    </li>
</ul>}