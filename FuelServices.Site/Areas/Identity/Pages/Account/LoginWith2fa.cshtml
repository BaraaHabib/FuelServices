@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<!-- Contact form start -->
<div class="contact-form">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="login-inner-form">
                    <div class="details">
                        <a href="~/">
                            <img src="~/uploads/logo_cover.png" class="cm-logo" alt="black-logo">
                        </a>
                        <h3>@ViewData["Title"]</h3>
                        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                            <input asp-for="RememberMe" type="hidden" />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <p>Your login is protected with an authenticator app. Enter your authenticator code below.</p>
                                                        
                            <div class="form-group">
                                <input type="text" asp-for="Input.TwoFactorCode" class="input-text" placeholder="Code">
                                <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                            </div>
                            <div class="checkbox clearfix">
                                <div class="form-check checkbox-theme">
                                    <label class="form-check-label" asp-for="Input.RememberMachine">
                                        <input class="form-check-input" asp-for="Input.RememberMachine" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMachine)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group mb-0">
                                <button type="submit" class="btn-md btn-theme btn-block">Log in</button>
                            </div>
                        </form>
                    </div>
                    <div class="footer">
                        <span>
                            Don't have access to your authenticator device? You can
                            <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">log in with a recovery code</a>.
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact form end -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
