@model FuelServices.DBContext.Domain.SupplierContactPersonRecordModel

@{
    ViewData["Title"] = "Offer Details";
    Layout = "~/Areas/Supplier/Views/Shared/_Layout.cshtml";
}

<section class="">
    <div class="">
        <hr />
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Contact Details</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div>
                            <div class="col-sm-12">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.Name)</span>
                                        <span class="info-box-number text-center text-muted mb-0">@Html.DisplayFor(model => model.Name)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div>
                            <div class="col-sm-12">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.JobTitle)</span>
                                        <span class="info-box-number text-center text-muted mb-0">@Html.DisplayFor(model => model.JobTitle)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div>
                            <div class="col-sm-12">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.ItemOrder)</span>
                                        <span class="info-box-number text-center text-muted mb-0">@Html.DisplayFor(model => model.ItemOrder)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <div class="col-sm-12">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        <h3 class="info-box-text text-center text-muted"><b>Contacts</b></h3>
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Type</th>
                                                    <th>Value</th>
                                                    <th>Description</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Values)
                                                {
                                                    <tr>
                                                        <td>@item.Contact.DisplayName</td>
                                                        <td>@item.Value</td>
                                                        <td>@item.Description</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>