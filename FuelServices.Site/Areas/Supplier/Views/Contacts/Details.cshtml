@model FuelServices.DBContext.Domain.ContactRecordModel

@{
    ViewData["Title"] = "Offer Details";
    Layout = "~/Areas/Supplier/Views/Shared/_Layout.cshtml";
}

<section class="">
    <div class="">
        <hr />
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Contact Details</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div>
                            <div class="col-sm-12">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        <span class="info-box-text text-center text-muted">Type</span>
                                        <span class="info-box-number text-center text-muted mb-0">@Html.DisplayFor(model => model.Contact.DisplayName)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div>
                            <div class="col-sm-12">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.Value)</span>
                                        <span class="info-box-number text-center text-muted mb-0">@Html.DisplayFor(model => model.Contact.DisplayName)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div>
                            <div class="col-sm-12">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        <span class="info-box-text text-center text-muted">Order</span>
                                        <span class="info-box-number text-center text-muted mb-0">@Html.DisplayFor(model => model.Contact.ItemOrder)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <div class="col-sm-12">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        <span class="info-box-text text-center text-muted">@Html.DisplayNameFor(model => model.Description)</span>
                                        <span class="info-box-number text-center text-muted mb-0">@Html.DisplayFor(model => model.Description)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>