@model DBContext.Models.Advertisement

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-success">
                <div class="box-header">
                    <h3 class="box-title">
                        @ViewData["Title"]
                    </h3>
                </div>
                <div class="box-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Title" class="control-label col-md-2"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label col-md-2"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AnchorUrl" class="control-label col-md-2"></label>
                                <input asp-for="AnchorUrl" class="form-control" />
                                <span asp-validation-for="AnchorUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Caption" class="control-label col-md-2"></label>
                                <input asp-for="Caption" class="form-control" />
                                <span asp-validation-for="Caption" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AdvertisementOwnerId" class="control-label col-md-2"></label>
                                <select asp-for="AdvertisementOwnerId" class="form-control" asp-items="ViewBag.AdvertisementOwnerId"></select>
                                <span asp-validation-for="AdvertisementOwnerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AdvertisementCategoryId" class="control-label col-md-2"></label>
                                <select asp-for="AdvertisementCategoryId" class="form-control" asp-items="ViewBag.AdvertisementCategoryId"></select>
                                <span asp-validation-for="AdvertisementCategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AdvertisementTypeId" class="control-label col-md-2"></label>
                                <select asp-for="AdvertisementTypeId" class="form-control" asp-items="ViewBag.AdvertisementTypeId"></select>
                                <span asp-validation-for="AdvertisementTypeId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl" class="control-label col-md-2"></label>
                                <input type="file" name="file" class="form-control form-file-upload" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AdvertisementImageTypeId" class="control-label col-md-2"></label>
                                <select asp-for="AdvertisementImageTypeId" class="form-control" asp-items="ViewBag.AdvertisementImageTypeId"></select>
                                <span asp-validation-for="AdvertisementImageTypeId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Period (From - To)</label>
                                <div class="col-md-10">
                                    <button type="button" class="btn btn-warning form-control" id="daterange-btn" name="from_to">
                                        <span>
                                            <i class="fas fa-calendar-alt"></i> From Date - To
                                        </span>
                                        <i class="fas fa-caret-down"></i>
                                    </button>
                                    <input type="hidden" name="offer_StartDate" id="offer_StartDate" />
                                    <input type="hidden" name="offer_EndDate" id="offer_EndDate" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="TotalPrice" class="control-label col-md-2"></label>
                                <input asp-for="TotalPrice" class="form-control" />
                                <span asp-validation-for="TotalPrice" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="CaptionClicks" />
                            <input type="hidden" asp-for="Created" />
                            <input type="hidden" asp-for="ImageUrl" />
                            <input type="hidden" asp-for="Status" />

                            <div class="form-group">
                                <label asp-for="IsDeleted" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        <input type="checkbox" asp-for="IsDeleted" />
                                        <span asp-validation-for="IsDeleted" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ItemOrder" class="control-label col-md-2"></label>
                                <input asp-for="ItemOrder" class="form-control" />
                                <span asp-validation-for="ItemOrder" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-success" />
                                    <a class="btn btn-default" href="@Url.Action("Index")">
                                        <i class="fas fa-chevron-circle-left"></i>Back to List
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(function () {
        $('#advertisements_counters').hide();
    });
</script>
}