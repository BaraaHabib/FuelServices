@model IEnumerable<DBContext.Models.Advertisement>

@foreach (var item in Model)
{
    if (item.AdvertisementType.Name == "popup_video")
    {
        string modal_name = "modal_" + item.AdvertisementType.Name + "_" + item.Id;

        <!--Modal: modalVM-->
        <div class="modal fade" id="@modal_name" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
             aria-hidden="true" style="z-index:9999999;">
            <div class="modal-dialog modal-lg" role="document">
                <!--Content-->
                <div class="modal-content">
                    <!--Body-->
                    <div class="modal-body mb-0 p-0">
                        <div class="embed-responsive embed-responsive-16by9 z-depth-1-half">
                            <iframe class="embed-responsive-item" src="@item.ImageUrl"
                                    allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
                <!--/.Content-->
            </div>
        </div>
        <!--Modal: modalVM-->
    }
}