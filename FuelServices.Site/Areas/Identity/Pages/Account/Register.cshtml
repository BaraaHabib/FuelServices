@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- Contact form start -->
<div class="contact-form">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="login-inner-form">
                    <div class="details">
                        <a href="~/">
                            <img src="~/uploads/logo_cover.png" class="cm-logo" alt="black-logo">
                        </a>
                        <h3>Create an account</h3>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <input type="text" asp-for="Input.Email" class="input-text" placeholder="Email Address">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="Input.Password" class="input-text" placeholder="Password">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="Input.ConfirmPassword" class="input-text" placeholder="Confirm Password">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="checkbox clearfix"></div>
                            <div class="form-group mb-0">
                                <button type="submit" class="btn-md btn-theme btn-block">Register</button>
                            </div>
                        </form>
                    </div>
                    <div class="footer">
                        <span>Already a member? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login here</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact form end -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
