@model List<DBContext.Models.SupplierContactPerson>
@using DBContext.Models


<div class="sub-banner overview-bgi">
    <div class="container">
        <div class="breadcrumb-area">
            <h1></h1>
            <ul class="breadcrumbs">
                <li><a href="index.html"></a></li>
                <li class=""></li>
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <h3 class="h3">Contacts</h3>
    <div class="row">
        <div class="col-md-6">
            @if (ViewBag.SupplierContact != null)
            {
                @foreach (var item in (List<SupplierContact>)ViewBag.SupplierContact)
                {
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-info">@item.Contact.Name</li>
                        <li class="list-group-item">@item.Value</li>
                    </ul>
                }
            }

        </div>
    </div>
    @if (Model.DefaultIfEmpty() != null)
    {
        <h2 class="h2"> Pepole to contact</h2>

        <div class="row">
            <div class="col-md-6">
                <ul class="list-group">
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item active">@item.Name</li>
                        @if (item.JobTitle != null)
                        {
                            <li class="list-group-item text-secondary">@item.JobTitle</li>
                        }
                        @foreach (var contact in item.SupplierContactPersonContact)
                        {
                            <li class="list-group-item">@contact.Contact.DisplayName : @contact.Value</li>
                        }
                    }
                </ul>
            </div>
        </div>
    }



</div>